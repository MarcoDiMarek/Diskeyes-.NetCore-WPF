<Window x:Class="Diskeyes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Diskeyes"
        mc:Ignorable="d"
        Background="#171717"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <!--<ColumnDefinition Width="155*"/>-->
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Name="UIInfoText" Margin="10" HorizontalAlignment="Center" Foreground="White" Text="Initializing" Grid.ColumnSpan="3" TextWrapping="Wrap"></TextBlock>
            <ProgressBar Name="BusyBar" IsIndeterminate="True" Foreground="Yellow"/>
            <TextBox Name="SearchBox" HorizontalAlignment="Left" Margin="51,143,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="681" TextChanged="SearchBox_TextChanged" Grid.ColumnSpan="3"/>
        </StackPanel>
    </Grid>
</Window>
